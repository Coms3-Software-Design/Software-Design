<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/back"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    android:orientation="vertical"
    android:theme="@style/Theme.AppCompat.NoActionBar"
    tools:context=".Login">

    <LinearLayout
        android:layout_width="370dp"
        android:layout_height="290dp"
        android:layout_gravity="center|center_vertical"
        android:layout_marginTop="150sp"
        android:layout_marginBottom="50dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center|center_vertical"
            android:layout_margin="5dp"
            app:cardBackgroundColor="@color/white_90_transparent"
            app:cardCornerRadius="5dp"
            app:cardPreventCornerOverlap="false"
            app:elevation="0dp">

            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="75dp"
                android:layout_gravity="center|center_vertical"
                android:layout_marginTop="20sp"
                android:layout_marginBottom="75dp"
                app:layout_constraintBottom_toTopOf="@+id/etStudentNo_Login"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center|center_vertical"
                    android:layout_margin="13dp"
                    android:foregroundTint="#000000"
                    app:cardBackgroundColor="@color/colourLayout"
                    app:cardCornerRadius="18dp"
                    app:elevation="5dp">

                    <EditText
                        android:id="@+id/etStudentNo_Login"
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:layout_gravity="center|center_vertical"
                        android:backgroundTint="#FFFFFF"
                        android:foregroundTint="#000000"
                        android:hint="Username"
                        android:inputType="textPersonName"
                        android:padding="20dp"
                        android:textColor="@color/gradient_background_start"
                        android:textColorHint="@color/gradient_background_start" />

                </androidx.cardview.widget.CardView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="75dp"
                android:layout_gravity="center|center_vertical"
                android:layout_marginTop="35sp"
                android:layout_marginBottom="5dp"
                app:layout_constraintBottom_toTopOf="@+id/etStudentNo_Login"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"

                app:layout_constraintTop_toTopOf="parent">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center|center_vertical"
                    android:layout_margin="13dp"
                    app:cardBackgroundColor="@color/colourLayout"
                    app:cardCornerRadius="18dp"
                    app:elevation="5dp">

                    <EditText
                        android:id="@+id/etPassword_Login"
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:layout_gravity="center|center_vertical"
                        android:backgroundTint="#FFFFFF"
                        android:foregroundTint="#000000"
                        android:hint="Password"
                        android:inputType="textPassword"
                        android:padding="20dp"
                        android:textColor="@color/gradient_background_start"
                        android:textColorHint="@color/gradient_background_start" />

                </androidx.cardview.widget.CardView>


            </LinearLayout>

            <TextView
                android:id="@+id/tvForgotPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_vertical"
                android:layout_marginTop="85dp"
                android:clickable="true"
                android:ems="10"
                android:padding="5dp"
                android:text="forgot password? Click here!"
                android:textAlignment="center"
                android:textColor="@color/colourLayout" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>


    <Button
        android:id="@+id/btnSignIn"
        android:layout_width="260dp"
        android:layout_height="57dp"
        android:layout_gravity="center|center_vertical"
        android:layout_marginStart="71dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="71dp"
        android:background="@drawable/gradient_background"
        android:text="Sign In"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvForgotPass" />


    <TextView
        android:id="@+id/tvSignUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|center_vertical"
        android:layout_marginTop="9dp"
        android:clickable="true"
        android:ems="10"
        android:padding="5dp"
        android:text="New user? Click here to Sign Up"
        android:textAlignment="center"
        android:textColor="@color/colourLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSignIn" />


</LinearLayout>

