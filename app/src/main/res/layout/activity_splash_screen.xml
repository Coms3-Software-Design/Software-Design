<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SplashScreen"
    android:background="@drawable/login"
    android:orientation="vertical"
    android:id="@+id/loSplash">

    <Button
        android:id="@+id/btnSplashLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/buy_button"
        android:text="Login"
        android:textAllCaps="false"
        android:layout_marginTop="@dimen/_105sdp"
        android:layout_marginLeft="@dimen/_35sdp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_340sdp">

        <TextView
            android:id="@+id/tvCopyRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="@dimen/_75sdp"
            android:text="You not a member?"
            android:textColor="#000000"
            />

        <TextView
            android:id="@+id/tvSplashSignup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:layout_marginTop="@dimen/_1sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:text="Register!"
            android:textColor="@color/ourRed"
            android:textStyle="bold"
            />

    </LinearLayout>


</LinearLayout>