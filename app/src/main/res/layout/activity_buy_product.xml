<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fcfcfc"
    tools:context=".BuyProduct"
>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="610dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                app:cardCornerRadius="3dp"
                android:padding="10dp"
               >

                <ImageView
                    android:id="@+id/imgBuyProduct"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_goods"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="5dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tvBuyProdProdName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="31dp"
                        android:text="Product name"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:paddingRight="15dp"/>

                    <TextView
                        android:id="@+id/tvBuyProdProdPrice"
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="35dp"
                        android:text="R0.00"
                        android:textColor="#000000"
                        android:textSize="25dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="35dp"
                        android:text="FREE DELIVERY"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"
                        />

                    <TextView
                        android:id="@+id/pm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="35dp"
                        android:layout_marginBottom="19dp"
                        android:layout_marginTop="5dp"
                        android:text="On Credit: R20 / month" />



                </LinearLayout>
                <RatingBar
                    android:id="@+id/rbRateProd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:stepSize=".1"
                    android:layout_marginRight="50dp"
                    android:layout_gravity="end"
                    android:layout_marginTop="100dp"
                    style="?android:attr/ratingBarStyleSmall"
                    />


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="5dp">

                <LinearLayout
                    android:paddingTop="10dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="35dp"
                        android:text="Description"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvBuyProdDescProd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="35dp"
                        android:padding="10dp"
                        android:text="Get Your Headphones at takealot.com. Shop Now! Over 1 Million Happy Shoppers Have Found a Better Way to Shop Online at www.takealot.com. Daily Deals. Download Our Mobile App. Multiple Payment Options. Track Your Order."
                        />
                </LinearLayout>


            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_margin="20dp"
                    android:background="@drawable/prod_review"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Write a Review"
                        android:layout_gravity="center_horizontal"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_marginTop="8dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Happy with Our Product? Share your thoughts with other customers"
                        android:padding="10dp"
                        android:textAlignment="center"
                        />

                    <Button
                        android:layout_width="200dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center_horizontal"
                        android:text=" Write a review"
                        android:textColor="#fcfcfc"
                        android:textAllCaps="false"
                        android:background="@drawable/write_review_button"
                        />
                    <TextView
                        android:id="@+id/tvBuyProdViewAllReviews"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginTop="5dp"
                        android:clickable="true"
                        android:text="View All Reviews!"
                        android:layout_marginRight="8dp"
                        android:layout_marginBottom="5dp"

                        android:textColor="#024859"/>

                </LinearLayout>


            </androidx.cardview.widget.CardView>




        </LinearLayout>


    </ScrollView>
    <Button
        android:layout_gravity="center_horizontal"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:text="Buy Product"
        android:textAllCaps="false"
        android:background="@drawable/buy_button"
        android:textColor="#fcfcfc"/>



</LinearLayout>